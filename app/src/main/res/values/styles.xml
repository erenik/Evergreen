<resources>

    <style name="Evergreen" parent="Theme.AppCompat">
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:background">@color/mainButtonBackground</item>-->
    </style>
    <!-- Custom style, used for background with the nice gradient. -->
    <style name="Evergreen.BG">
        <item name="android:background">@drawable/bg3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/fullscreen_view</item>
    </style>

    <style name="Evergreen.Logo">
        <item name="android:src">@drawable/logo_granar_2</item>
    </style>

    <style name="Evergreen.IconLayout">     <!-- The outer box -->
        <!--        <item name="android:background">@drawable/icon</item>-->
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="Evergreen.IconInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Evergreen.IconBG">
        <item name="android:background">@drawable/icon</item>
        <!-- <item name="android:src">@drawable/icon</item> -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Evergreen.IconButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="Evergreen.IconText">
        <item name="android:textColor">@color/iconTextColor</item>
        <item name="android:text">10/10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingBottom">8dp
        </item> <!-- Padding of 16 good if icons weight is 2 -->
    </style>

    <style name="Evergreen.IconTextTitle" parent="Evergreen.IconText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <!-- Default for TextViews -->
    <style name="Evergreen.Text">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">@dimen/textSize</item>
        <!--
        <item name="android:padding">@dimen/textPadding</item>-->
        <item name="android:layout_margin">@dimen/textMargin</item>
    </style>

    <style name="Evergreen.Text.Long" parent="Evergreen.Text">
        <item name="android:padding">@dimen/textPadding.More</item>
    </style>

    <style name="Evergreen.TextBigger" parent="Evergreen.Text">
        <item name="android:textSize">@dimen/textSize.Larger</item>
        <item name="android:textColor">@color/textColor.Brighter</item>
    </style>

    <style name="Evergreen.TextBiggest" parent="Evergreen.Text">
        <item name="android:textSize">@dimen/textSize.Largest</item>
        <item name="android:textColor">@color/textColor.Brightest</item>
    </style>

    <style name="Evergreen.Text.Title" parent="Evergreen.Text">
        <item name="android:textColor">@color/textColor.Title</item>
        <item name="android:textSize">@dimen/textSize.Title</item>
        <item name="android:padding">@dimen/textPadding.More</item>
        <item name="android:layout_margin">@dimen/textMargin.More</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Evergreen.Text.Title.Smaller">
        <item name="android:textSize">@dimen/textSize.Title.Smaller</item>
    </style>

    <style name="Evergreen.Checkbox">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <!--  <item name="android:buttonTint">@color/mainTextColor</item> -->
        <item name="android:layout_weight">3</item>
    </style>
    <!-- Buttons -->
    <style name="Evergreen.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:textColor">@color/mainButtonTextColor</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin_smaller</item>
        <item name="android:background">@drawable/small_button</item>
        <item name="android:textSize">@dimen/textSize.Larger</item>
    </style>
    <style name="Evergreen.Button.MainScreenBottom" parent="Evergreen.Button">
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin_smaller</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Evergreen.Button.AdaptiveWidth" parent="Evergreen.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="Evergreen.Button.Wide" parent="Evergreen.Button">
        <item name="android:background">@drawable/wide_button</item>
        <item name="android:textSize">@dimen/textSize.Largest</item>
    </style>
    <style name="Evergreen.MainButtons" parent="Evergreen.Button.Wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textSize">@dimen/textSize.Larger</item>
        <item name="android:textColor">@color/mainButtonTextColor</item>
    </style>
    <style name="Evergreen.MainButtons.AdaptiveWidth" parent="Evergreen.MainButtons">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="Evergreen.MainButtonsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize.Largest</item>
        <item name="android:padding">3sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Evergreen.ImageView">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="Evergreen.ImageView.StatDetailIcon">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Evergreen.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">3sp</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Evergreen.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Evergreen.Layout.Row" parent="Evergreen.Layout">
        <item name="android:layout_height">40sp</item>
    </style>

    <style name="Evergreen.Layout.Vertical" parent="Evergreen.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Evergreen.Layout.Log">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="Evergreen.ScrollViewLog">
<!--        <item name="android:background">@drawable/chatlogbg</item>-->
        <item name="android:layout_width">match_parent</item>
    </style>


    <!-- Stuff inherited from the AccelerometerSampler project -->
    <style name="DefaultLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DefaultLLVertical" parent="DefaultLL">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultGraph">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="Evergreen.Layout.HalfColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Evergreen.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
