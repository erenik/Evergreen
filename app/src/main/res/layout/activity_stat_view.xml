<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Evergreen.BG"
    tools:context=".android.act.StatViewActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black_overlay"
            >
            <!-- Icon with stat, text with stat -->
            <!-- /// First Row of stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:background="@drawable/icon"
                    android:id="@+id/icon.image"
                    android:src="@drawable/icon_food"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    />
                <erenik.evergreen.android.ui.EvergreenTextView style="@style/Evergreen.Text.Title"
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:id="@+id/textView.stat.name"
                    android:text="Stat"
                    />
                <erenik.evergreen.android.ui.EvergreenTextView style="@style/Evergreen.Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView.stat.quantity"
                    android:text="0"
                    />
            </LinearLayout>

            <!-- General info. Click to read more? -->
            <erenik.evergreen.android.ui.EvergreenButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read detailed description"
                android:id="@+id/buttonToggleDetailedDescription"
                android:layout_gravity="center"
                />
            <!-- Frame with main content below, weight 1 to cover all area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <!-- Main content when desc text invisible -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <!-- Summary of recurring bonuses and penalties. -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/scrollView_statMoreInfo"
                        >
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/layoutStatRecurringBonuses" android:orientation="vertical">
                            <erenik.evergreen.android.ui.EvergreenTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Equip Bladiblamba"/>
                        </LinearLayout>
                    </ScrollView>
                    <!-- Actions here -->
                    <erenik.evergreen.android.ui.EvergreenTextView style="@style/Evergreen.TextBigger" android:text="@string/relevantGear" />
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_gravity="center_horizontal" >
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/layoutRelevantItems" android:orientation="vertical">
                            <erenik.evergreen.android.ui.EvergreenButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Equip Bladiblamba"/>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
                <!-- Help text inside here Covers all the space if visible. -->
                <erenik.evergreen.android.ui.EvergreenTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:visibility="invisible"
                    style="@style/Evergreen.Text.Long"
                    android:id="@+id/textView.stat.detailedInfo"
                    android:text="Updating.."
                    />

            </FrameLayout>

            <!-- Bottom buttons -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <erenik.evergreen.android.ui.EvergreenButton style="@style/Evergreen.Button" android:id="@+id/buttonPrevious" android:text="Previous" />
                <erenik.evergreen.android.ui.EvergreenButton style="@style/Evergreen.Button" android:id="@+id/buttonHome" android:text="Home" />
                <erenik.evergreen.android.ui.EvergreenButton style="@style/Evergreen.Button" android:id="@+id/buttonNext" android:text="Next" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>