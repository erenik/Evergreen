<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="erenik.evergreen">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_rounder_smaller"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Evergreen">
        <activity
            android:name=".android.act.EvergreenActivity"
            android:exported="true" />
        <activity
            android:name=".android.act.TitleScreen"
            android:label="@string/app_name"> <!-- Main start-up activity when launching the app. Performs checks and then auto-loads or shows initial menus. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.act.IntroScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".android.act.MainScreen"
            android:exported="true"
            android:label="@string/title_activity_main_screen" />
        <activity android:name=".android.act.MenuActivity" />
        <activity android:name=".android.act.SelectActivity" />
        <activity android:name=".android.act.GameOver" />
        <activity android:name=".android.act.EncounterActivity" />
        <activity
            android:name=".android.act.EventLogViewer"
            android:label="@string/title_activity_log_viewer" />
        <activity
            android:name=".android.act.CreateCharacter"
            android:exported="true"
            android:label="@string/title_activity_create_character" />
        <activity android:name=".android.act.StatViewActivity" />
    </application>

</manifest>